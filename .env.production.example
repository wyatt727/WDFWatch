# Production Environment Variables for WDFWatch
# 
# IMPORTANT: Copy this file to .env.production and fill in your actual values!
# Usage: cp .env.production.example .env.production
# Then edit .env.production with your real credentials

# Database
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_USER=wdfwatch
POSTGRES_DB=wdfwatch_prod

# Security - MUST CHANGE THESE!
NEXTAUTH_SECRET=generate_a_secure_random_secret_here
ENCRYPTION_KEY=generate_a_32_character_encryption_key

# Application
WDF_MOCK_MODE=false
WDF_WEB_MODE=true
WDF_NO_AUTO_SCRAPE=true
NODE_ENV=production

# URLs
NEXTAUTH_URL=https://your-domain.com

# Internal API Key for Python<->Web communication
WEB_API_KEY=generate_a_secure_random_api_key

# Ollama
WDF_OLLAMA_HOST=http://ollama:11434

# Redis
WDF_REDIS_URL=redis://redis:6379/0

# Twitter API Credentials (from your Twitter Developer Portal)
# These are the same as development but use production app credentials
API_KEY=your_production_api_key
API_KEY_SECRET=your_production_api_key_secret
CLIENT_ID=your_production_client_id
CLIENT_SECRET=your_production_client_secret

# WDFwatch OAuth 2.0 Tokens (obtained via generate_wdfwatch_tokens.py)
WDFWATCH_ACCESS_TOKEN=your_wdfwatch_access_token
WDFWATCH_REFRESH_TOKEN=your_wdfwatch_refresh_token
WDFWATCH_TOKEN_TYPE=bearer
WDFWATCH_EXPIRES_IN=7200
WDFWATCH_SCOPE="tweet.write users.read tweet.read offline.access"

# Monitoring (optional)
GRAFANA_PASSWORD=change_this_grafana_password
